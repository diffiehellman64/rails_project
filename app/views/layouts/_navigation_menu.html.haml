.row
  %nav{ class: 'navbar navbar-default', role: 'navigation' }
    .col-md-1
    .col-md-10
      = render_navigation expand_all: true, renderer: :bootstrap
      - if !user_signed_in?
        %form.navbar-form.navbar-right
          .btn-group
            = link_to 'Log In', new_user_session_path, { class: 'btn btn-default' }
            %button{ type: 'button', class: 'btn btn-default', 'data-toggle': 'dropdown', 'aria-haspopup': 'true', 'aria-expended': 'false' }
              %span.caret
            %ul.dropdown-menu
              %li= link_to 'Sing Up', new_user_registration_path
              %li= link_to 'Forgot your password?', new_user_password_path
      - else
        %form.navbar-form.navbar-right= current_user.email
    .col-md-1
