- if can? :modify, @gallery
  .actions
    = link_to edit_gallery_path(@gallery), class: 'btn btn-warning btn-xs' do
      %span.glyphicon.glyphicon-edit
      = t('views.actions.edit')
    = ' '
    = link_to t('views.actions.destroy'), gallery_path(@gallery), class: 'btn btn-danger btn-xs', method: :delete
