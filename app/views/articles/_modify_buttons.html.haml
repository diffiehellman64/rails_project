- if can? :modify, @article
  .actions
    = link_to edit_article_path(@article), class: 'btn btn-warning btn-xs' do
      %span.glyphicon.glyphicon-edit
      = t('views.articles.actions.edit')
    = ' ' 
    = link_to versions_item_path('article', @article.id), class: 'btn btn-primary btn-xs' do
      %span.glyphicon.glyphicon-time
      = t('views.articles.actions.versions')
    = ' ' 
    = link_to article_path( @article, format: :pdf), class: 'pdf-link btn btn-success btn-xs' do
      %span.glyphicon.glyphicon-file
      = t('views.actions.show_pdf')
