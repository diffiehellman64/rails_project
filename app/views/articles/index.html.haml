%p{ id: 'notice' }= notice
%h1 Listing Articles
- @articles.each do |article|
  %h2= link_to article.title, article
  = raw article.text
  = link_to 'Edit', edit_article_path(article)
  = link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }
= link_to 'New Article', new_article_path
