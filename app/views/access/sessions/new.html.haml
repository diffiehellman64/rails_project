%h1 Log in
= simple_form_for :user, url: session_path(@user), html: {class: 'form-horizontal'} do |f|
  = f.error_notification
  /= f.input :email, required: false, autofocus: true, placeholder: 'Email', required: true
  = f.input :login, autofocus: true, placeholder: 'Login', required: true
  = f.input :password, placeholder: 'Password', required: true
  /= link_to('(forgot password)', new_user_password_path)
  = f.input :remember_me, class: 'checkbox', as: :boolean if devise_mapping.rememberable?
  = f.button :submit, "Log in"
/= render 'devise/shared/links'
