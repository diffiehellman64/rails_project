%div{ id: 'menu-constructor' }
  %table.table.table-bordered.table-hover
    %tr
      %th Title
      %th Url
      %th Active
    - @menu_items.each do |item|
      %tr.draggable
        %td= item.title
        %td= item.url
        %td= item.active
.btn.btn-default{ id: 'action_add_item_menu' } Add menu item
.btn.btn-primary{ id: 'action_apply_menu' } Apply changes
